<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="200" Width="300">
    <Grid>
        <Label Content="Логин:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="txtLogin" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,35,0,0" Width="200"/>

        <Label Content="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <PasswordBox Name="txtPass" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,95,0,0" Width="200"/>

        <Button Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" Width="80" Click="Button_Click"/>
    </Grid>
</Window>

